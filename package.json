{
  "name": "sdkdrift-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "SDKDrift monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run --workspace @sdkdrift/core build && npm run --workspace @sdkdrift/python-scanner build && npm run --workspace @sdkdrift/cli build && npm run --workspace @sdkdrift/landing build",
    "typecheck": "npm run --workspace @sdkdrift/core typecheck && npm run --workspace @sdkdrift/python-scanner typecheck && npm run --workspace @sdkdrift/cli typecheck && npm run --workspace @sdkdrift/landing typecheck",
    "test": "npm run --workspaces test",
    "test:fixtures": "node ./tests/run-fixtures.mjs",
    "release:check": "node ./scripts/check-publish-ready.mjs",
    "release:prepare": "node ./scripts/prepare-release.mjs",
    "benchmark:run": "node ./scripts/benchmark-run.mjs",
    "benchmark:gold:sync": "node ./scripts/gold-sync-from-reports.mjs",
    "benchmark:gold:promote": "node ./scripts/gold-auto-promote.mjs",
    "lint": "npm run --workspaces lint",
    "smoke:cli": "node ./packages/cli/dist/cli.js scan --spec ./fixtures/simple/openapi.yaml --sdk ./fixtures/simple/sdk/python --lang python --format terminal",
    "smoke:cli:json": "node ./packages/cli/dist/cli.js scan --spec ./fixtures/simple/openapi.yaml --sdk ./fixtures/simple/sdk/python --lang python --format json --out ./tests/smoke-report.json",
    "smoke:cli:ts": "node ./packages/cli/dist/cli.js scan --spec ./fixtures/cases/ts-basic/openapi.yaml --sdk ./fixtures/cases/ts-basic/sdk/ts --lang ts --format terminal",
    "smoke:cli:override": "node ./packages/cli/dist/cli.js scan --spec ./fixtures/cases/override/openapi.yaml --sdk ./fixtures/cases/override/sdk/python --lang python --config ./fixtures/cases/override/sdkdrift.config.yaml --format terminal"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}
